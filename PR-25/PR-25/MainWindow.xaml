<Window x:Class="PR_25.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR_25"
        mc:Ignorable="d"
        Title="Практическая работа №25" Height="450" Width="450"
        WindowStartupLocation="CenterScreen" MinHeight="450" MinWidth="600" HorizontalAlignment="Center" ResizeMode="NoResize" VerticalAlignment="Center" FontSize="14" BorderBrush="White" OpacityMask="White" Foreground="White">
    <Grid Margin="10">
        <TabControl>
            <TabItem Header="Задание 1">
                <Grid Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Проверить, является ли целое положительное число нечетным трехзначным." TextWrapping="Wrap" FontWeight="Bold" TextAlignment="Center" FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,15,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Label Content="Введите число:"/>
                        <TextBox x:Name="Task1NumberInput" Width="150" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button x:Name="Task1ExecuteButton" Grid.Row="2" Content="Проверить" Width="120" HorizontalAlignment="Center" Margin="0,10,0,0" Click="Task1ExecuteButton_Click" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="3" Text="Результат:" FontWeight="SemiBold" Margin="0,15,0,5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock x:Name="Task1ResultOutput" Grid.Row="4" FontSize="16" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Grid>
            </TabItem>

            <TabItem Header="Задание 2">
                <Grid Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Найти произведение трех наибольших из пяти различных ненулевых целых чисел." TextWrapping="Wrap" FontWeight="Bold" TextAlignment="Center" FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <WrapPanel Grid.Row="1" Margin="0,15,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBox x:Name="Task2Num1" Width="80" Margin="5"/>
                        <TextBox x:Name="Task2Num2" Width="80" Margin="5"/>
                        <TextBox x:Name="Task2Num3" Width="80" Margin="5"/>
                        <TextBox x:Name="Task2Num4" Width="80" Margin="5"/>
                        <TextBox x:Name="Task2Num5" Width="80" Margin="5"/>
                    </WrapPanel>
                    <Button x:Name="Task2ExecuteButton" Grid.Row="2" Content="Вычислить" Width="120" HorizontalAlignment="Center" Margin="5,10,0,0" Click="Task2ExecuteButton_Click" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="3" Text="Результат (произведение):" FontWeight="SemiBold" Margin="5,15,0,5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock x:Name="Task2ResultOutput" Grid.Row="4" FontSize="16" Foreground="Black" VerticalAlignment="Center" Margin="5,0,0,0" HorizontalAlignment="Center"/>
                </Grid>
            </TabItem>

            <TabItem Header="Задание 4">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="#FFF0F0F0"/>
                        <GradientStop Color="#FFE5E5E5" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Найти минимальное значение из 4-х целых чисел с помощью функции Min4(A, B, C, D)." TextWrapping="Wrap" FontWeight="Bold" TextAlignment="Center" FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <WrapPanel Grid.Row="1" Margin="0,15,0,0" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Label Content="A:"/>
                        <TextBox x:Name="Task4NumA" Width="80" HorizontalAlignment="Left"/>
                        <Label Content="B:" Margin="10,0,0,0"/>
                        <TextBox x:Name="Task4NumB" Width="80"/>
                        <Label Content="C:" Margin="10,0,0,0"/>
                        <TextBox x:Name="Task4NumC" Width="80"/>
                        <Label Content="D:" Margin="10,0,0,0"/>
                        <TextBox x:Name="Task4NumD" Width="80"/>
                    </WrapPanel>
                    <Button x:Name="Task4ExecuteButton" Grid.Row="2" Content="Найти минимум" Width="120" HorizontalAlignment="Center" Margin="0,10,0,0" Click="Task4ExecuteButton_Click" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="3" Text="Результат (минимум):" FontWeight="SemiBold" Margin="0,15,0,5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="Task4ResultOutput" Grid.Row="4" FontSize="16" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>